<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lemomall">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.LEMOMALL">
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/login_background"/>
        <activity
            android:name=".GreenFruitsActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".WinterFruitsActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".SummerFruotsActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".NewFruitsActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".OrdersActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".BasketActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".AccountActivity"
            android:exported="false"
            android:theme="@style/main_background"/>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/regitser_background"/>
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/login_background"/>
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/splash_background">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/main_background"/>
    </application>

</manifest>