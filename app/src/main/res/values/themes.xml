<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LEMOMALL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#003700B3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splash_background" parent="Theme.LEMOMALL">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="main_background" parent="Theme.LEMOMALL">
        <item name="android:windowBackground">@drawable/main_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="login_background" parent="Theme.LEMOMALL">
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="regitser_background" parent="Theme.LEMOMALL">
        <item name="android:windowBackground">@drawable/register_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>